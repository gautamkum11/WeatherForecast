<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"> -->
        <title>Weather Forecast</title>
        <link rel="stylesheet" href="gks.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="icon" href="https://play-lh.googleusercontent.com/mP-I2P3mbIoVyU9ZdoI9ouXoU1UHER7bbJibAPhFDzX5bqpSw6va5cVaw5vKMZ6nZsY" type="image/x-icon">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link href='https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.css' rel='stylesheet' />
    </head>
    <body>
        <div class="card">
            <h1 class="gk">Weather Forecast</h1>
            <form action="/" method="post">
            <div class="search">
                <input type="search" class="searchbar" name="userinput" placeholder="Enter city name"> 
                <button type="submit">
                    <div class="material-symbols-outlined">
                        search
                    </div>
                </button>  
            </div>
            </form>
            <div class="weather">
                <h2 name ="city"></h2>
                <h1 name = "temp"></h1>
                <!-- <img src="" alt=""> -->
                <div class="desciption"></div>
                <div class="Humidity"></div>
                <div class="Wind"></div>
            </div>
        </div>
        <div class="container" style="width: 100%; height: 100%;">
            <div id='map' style="width: 100%; height: 100%; border: 2px solid black; border-radius: 10px;">
            </div>
        </div>
        <script src='https://api.mapbox.com/mapbox-gl-js/v2.8.2/mapbox-gl.js'></script>
        <script>
            mapboxgl.accessToken = "<%=k%>"
            const map = new mapboxgl.Map({
            container: 'map', // container ID
            style: 'mapbox://styles/mapbox/streets-v11', // style URL
            center: [75.8333, 22.7179], // starting position [lng, lat]
            zoom: 5 // starting zoom
            });
        </script>
    </body>
</html>